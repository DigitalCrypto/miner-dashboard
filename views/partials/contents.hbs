<div class="panel {{#if miner.connected}}panel-success{{else}}panel-danger{{/if}}">
    <div class="panel-heading {{#if miner.connected}}{{/if}}">
        <div class="row">
            <h2 class="panel-title col-xs-6">Miner 1</h2>
            <div class="col-xs-6"><span class="pull-right">{{#if miner.connected}}Connected{{else}}Disonnected{{/if}}</span></div>
        </div>
    </div>
    {{#if miner.connected}}
        <div class="panel-body row">
        
            <div class="col-xs-12 col-sm-6 col-md-4">
                <h3>Status</h3>
                <p>Status: Connected</p>
                <p>Miner: {{miner.description}}</p>
                <p>Hardware Errors: {{miner.hardwareErrors}}</p>
                <p>Current Average Hashrate: {{miner.avgHashrate}} MH/s</p>
                <p>Current Earnings Per {{earnings.interval}}: {{earnings.value}} {{earnings.currency}}</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4">
                <h3>Shares</h3>
                <p>Accepted: {{miner.shares.accepted}}</p>
                <p>Rejected: {{miner.shares.rejected}}</p>
                <p>Stale: {{miner.shares.stale}}</p>
                <p>Discarded: {{miner.shares.discarded}}</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4">
                <h3>Difficulty</h3>
                <p>Accepted: {{miner.difficulty.accepted}}</p>
                <p>Rejected: {{miner.difficulty.rejected}}</p>
                <p>Stale: {{miner.difficulty.stale}}</p>
            </div>
       
        </div>
    {{/if}}
</div>